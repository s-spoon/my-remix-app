generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String @unique
  posts Post[]
}

model Post {
  userId    Int?
  content   String?
  id        Int     @default(autoincrement()) @id
  title     String
  user    User?   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  imageUrl  String?
}
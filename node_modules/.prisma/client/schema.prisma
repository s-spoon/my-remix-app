generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}

model Post {
  userId    Int?
  content   String?
  id        Int      @id @default(autoincrement())
  title     String
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  imageUrl  String?
}
